{
  "name": "alldigitalrewards/fis",
  "type": "library",
  "description": "All Digital Rewards FIS A2A API wrapper",
  "keywords": [
    "ADR",
    "FIS",
    "Cards"
  ],
  "homepage": "https://bitbucket.org/alldigitalrewards/fis",
  "require": {
    "php": "~7.0",
    "respect/validation": "^1.1",
    "guzzlehttp/psr7": "^1.4",
    "guzzlehttp/guzzle": "^6.3"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0||~5.0",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "AllDigitalRewards\\FIS\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AllDigitalRewards\\FIS\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit tests/",
    "check-style": "phpcs -p --standard=phpcs.xml src",
    "fix-style": "phpcbf -p --standard=phpcs.xml src"
  }
}
